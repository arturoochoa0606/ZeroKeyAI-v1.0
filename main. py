from flask import Flask
from zerokey.api.routes import init_routes
from zerokey.config import Config

def create_app():
    app = Flask(__name__)
    app.config.from_object(Config)
    init_routes(app)
    return app

def main():
    app = create_app()
    app.run(host="0.0.0.0", port=5000, debug=True)

if __name__ == "__main__":
    main()
