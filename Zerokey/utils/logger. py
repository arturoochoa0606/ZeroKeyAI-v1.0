import logging
from rich.logging import RichHandler


def get_logger(name: str = "ZeroKeyAI"):
    """
    Returns a configured logger using RichHandler for pretty console output.
    """
    logging.basicConfig(
        level=logging.INFO,
        format="%(message)s",
        datefmt="[%X]",
        handlers=[RichHandler(rich_tracebacks=True)]
    )
    return logging.getLogger(name)
